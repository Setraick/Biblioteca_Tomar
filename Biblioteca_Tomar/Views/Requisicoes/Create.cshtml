@model Biblioteca_Tomar.Models.Requisicoes

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar</h1>

<h4>Requisições</h4>

<div class="row">
    <div class="col-md-4">
        <hr class="darkmodehr" />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RequisitanteFK" class="control-label"></label>
                <select asp-for="RequisitanteFK" class="form-control" asp-items="ViewBag.RequisitanteFK">
                    <option value="0">Escolha o Requisitante, por favor.</option>
                </select>
                <span asp-validation-for="RequisitanteFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Livros</label>
                <select name="livros" class="form-control" asp-items="ViewBag.LivroFK">
                    <option value="0">Escolha o primeiro livro, por favor.</option>
                </select>
            </div>
            <div class="form-group">
                <label  class="control-label"></label>
                <select name="livros" class="form-control" asp-items="ViewBag.LivroFK">
                    <option value="0">Escolha o segundo livro, por favor.</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <select name="livros" class="form-control" asp-items="ViewBag.LivroFK">
                    <option value="0">Escolha o terceiro livro, por favor.</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <select name="livros" class="form-control" asp-items="ViewBag.LivroFK">
                    <option value="0">Escolha o quarto livro, por favor.</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <select name="livros" class="form-control" asp-items="ViewBag.LivroFK">
                    <option value="0">Escolha o quinto livro, por favor.</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
