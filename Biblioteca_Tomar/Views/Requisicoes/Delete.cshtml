@model Biblioteca_Tomar.Models.Requisicoes

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Tem a certeza que pretende eliminar esta Requisição?</h3>
<div>
    <h4>Requisições</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Requisitante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Requisitante.Email)
        </dd>
        <dt class="col-sm-2">
            Funcionário que entregou os livros
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FuncionarioInicioRequisicao.Nome)
        </dd>
        <dt class="col-sm-2">
            Funcionário que recebeu os livros
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FuncionarioFimRequisicao.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataDevol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDevol)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Multa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Multa)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
