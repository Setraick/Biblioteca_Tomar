@model IEnumerable<Biblioteca_Tomar.Models.Requisicoes>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Requisitante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FuncionarioInicioRequisicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FuncionarioFimRequisicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Requisitante.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FuncionarioInicioRequisicao.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FuncionarioFimRequisicao.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
<td>
                <a asp-action="Revoke" asp-route-id="@item.Id">Fazer a Devolução</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
