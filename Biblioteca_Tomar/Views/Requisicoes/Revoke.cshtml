@model Biblioteca_Tomar.Models.Requisicoes

@{
    ViewData["Title"] = "Revoke";
}

<h1>Devolução</h1>

<h4>Requisições</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Revoke">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RequisitanteFK" class="control-label"></label>
                <select asp-for="RequisitanteFK" class="form-control" asp-items="ViewBag.RequisitanteFK"></select>
                <span asp-validation-for="RequisitanteFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuncionarioInicioRequisicaoFK" class="control-label"></label>
                <select asp-for="FuncionarioInicioRequisicaoFK" class="form-control" asp-items="ViewBag.FuncionarioInicioRequisicaoFK"></select>
                <span asp-validation-for="FuncionarioInicioRequisicaoFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuncionarioFimRequisicaoFK" class="control-label"></label>
                <select asp-for="FuncionarioFimRequisicaoFK" class="form-control" asp-items="ViewBag.FuncionarioFimRequisicaoFK"></select>
                <span asp-validation-for="FuncionarioFimRequisicaoFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDevol" class="control-label"></label>
                <input asp-for="DataDevol" class="form-control" />
                <span asp-validation-for="DataDevol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
