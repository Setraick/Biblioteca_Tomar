@model IEnumerable<Biblioteca_Tomar.Models.Utilizadores>

@{
    ViewData["Title"] = "Lista de Utilizadores por Autorizar";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="ListaUtilizadoresPorAutorizar" method="post">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telemovel)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" value="@item.Nome" name="utilizadores" />
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telemovel)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <input type="submit" value="Atualizar os dados do Utilizadores" class="btn btn-primary" />
    </div>
</form> 