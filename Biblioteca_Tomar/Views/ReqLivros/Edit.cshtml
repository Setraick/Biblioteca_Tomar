@model Biblioteca_Tomar.Models.ReqLivros

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Livros à requisição</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ReqFK" class="control-label"></label>
                <select asp-for="ReqFK" class="form-control" asp-items="ViewBag.ReqFK"></select>
                <span asp-validation-for="ReqFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LivroFK" class="control-label"></label>
                <select asp-for="LivroFK" class="form-control" asp-items="ViewBag.LivroFK"></select>
                <span asp-validation-for="LivroFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
